<% if flash[:notice] %>
  <p class="notice">
    <%= flash[:notice] %>
　</p>
<% end %>
<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render 'books/list', book: @book, user: current_user %>
        </div>

        <div class="col-md-8 offset-md-1">
            <h2>Users</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>image</th>
                            <th>name</th>
                            <th colspan="6"></th>
                        </tr>
                    </thead>
                    <% @users.each do |user| %>
                    <tbody>
                        <tr>
                            <td>
                                <%= attachment_image_tag user, :profile_image, format: 'jpeg', size: '40x40',  fallback: "no_image.jpg" %>
                            </td>
                            <td>
                                <%= user.name %>
                            </td>
                            <td>フォロー数:</td>
                            <td>フォロワー数:</td>
                            <td>
                              <% if current_user != user %>
                                <% if user.followed_by?(current_user) %>
                                  <p><%=link_to "フォロー外す", user_relationship_path(user_id: user, id: user), method: :delete %></p>
                                <% else %>
                                  <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
                                <% end %>
                              <% end %>
                            </td>
                            <td>
                                <%= link_to "Show", user_path(user.id) %>
                            </td>
                        </tr>
                    </tbody>
                    <% end %>
                </table>