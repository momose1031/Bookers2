<% if flash[:notice] %>
  <p class="notice-user-update">
    <%= flash[:notice] %>
　</p>
<% end %>
<div class="container px-5 px-sm-0">
    <div class="row">
        <div class="col-md-3">
            <%= render 'books/list', book: @book_new, user: @book.user %>
        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Book detail</h2>
          <table class="table">
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(@book.user.id)do %>
                    <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', size: '40x40',  fallback: "no_image.jpg" %><br>
                    <%= @book.user.name %>
                  <% end %>
                </td>
                <td><%= link_to @book.title, book_path %></td>
                <td><%= @book.body %></td>
                <td>
                  <div id="favorite_button">
                    <!--%= render partial: 'favorites/favorite', locals {book: book} %>-->
                  </div>
                  <!--% if @book.favorited_by?(current_user) %>-->
                  <!--  %= link_to book_favorite_path(@book.id), method: :delete do %>-->
                  <!--    ♥%= @book.favorites.count %>-->
                  <!--  % end %>-->
                  <!--% else %>-->
                  <!--  %= link_to book_favorite_path(@book.id), method: :post do %>-->
                  <!--    ♡%= @book.favorites.count %>-->
                  <!--  % end %>-->
                  <!--% end %>-->
                </td>
                <td>コメント数:<%= @book.book_comments.count %></td>
                <% if @book.user == current_user %>
                  <td>
                    <%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %>
                  </td>
                  <td>
                    <%= link_to "Destroy", book_path(@book.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
                  </td>
                <% end %>
              </tr>
            </tbody>
          </table>
          <% @book.book_comments.each do |book_comment| %>
            <%= link_to user_path(book_comment.user.id)do %>
              <%= attachment_image_tag book_comment.user, :profile_image, format: 'jpeg', size: '40x40',  fallback: "no_image.jpg" %><br>
              <%= book_comment.user.name %>
            <% end %>
            <%= book_comment.comment %>
            <% if book_comment.user == current_user %>
              <%= link_to 'Destroy', book_book_comments_path(book_comment.book, book_comment), method: :delete, class: "btn btn-sm btn-danger" %>
            <% end %>
          <% end %>

          <%= form_with(model: [@book, @book_comment], local: true) do |f| %>
            <%= f.text_area :comment, size: '91x5'%>
            <%= f.submit '送信' %>
          <% end %>
        </div>